{
  "compilerOptions": {
    "lib": [
      "es2020",
      "dom"
    ],
    "strictPropertyInitialization": false,
    "experimentalDecorators": true,
    "target": "ES2018",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "*": [
        "node_modules/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}
